<Window x:Name="window"
        x:Class="ListBoxDragDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBoxDragDrop"
        xmlns:sgz="clr-namespace:SugzTools.Controls;assembly=SugzTools"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>


    <Grid Background="#FF444444">
        <local:SgzExpanderList Margin="5"
                                       AllowDrop="True">
            <local:SgzExpanderItem Header="Expander 01"/>
            <local:SgzExpanderItem Header="Expander 02" />
            <local:SgzExpanderItem Header="Expander 03" />
        </local:SgzExpanderList>
    </Grid>
</Window>
