<Window x:Class="CodeDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:local="clr-namespace:CodeDoc.Controls"
        xmlns:sgz="clr-namespace:SugzTools.Controls;assembly=SugzTools"
        xmlns:c="clr-namespace:SugzTools.Converters;assembly=SugzTools"
        xmlns:icons="clr-namespace:SugzTools.Icons;assembly=SugzTools"
        mc:Ignorable="d ignore"
        Title="SugzTools Code Documentation"
        Height="380"
        Width="750"
        Background="{StaticResource MaxBackground}"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Icon="Resources/CodeDoc.ico"
        Cursor="{Binding Cursor}">

    <Window.Resources>
        <c:InvertVisibilityConverter x:Key="InvertVisibility" />
        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>

        <local:SgzSlidingDockPanel Width="30"
                                   OpenSize="118"
                                   AnimationDuration="250">
            <local:SgzSlidingDockPanel.Resources>
                <Style x:Key="AnimateBgStyle" TargetType="{x:Type sgz:SgzIcon}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background"
                                    Value="{StaticResource MaxButtonMouseOver}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </local:SgzSlidingDockPanel.Resources>
            <sgz:SgzIcon Command="{Binding AddFolderCommand}"
                         Icon="MdiFolderPlus"
                         Content="ADD FOLDER"
                         Width="Auto"
                         Height="30"
                         IconWidth="16"
                         IconHeight="18"
                         Padding="7"
                         DockPanel.Dock="Top"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         HoverBrush="White"
                         PressedBrush="White"
                         Style="{DynamicResource AnimateBgStyle}" />
            <sgz:SgzIcon Command="{Binding LoadConfigCommand}"
                         Icon="MdiFolderUpload"
                         Content="LOAD CONFIG"
                         Width="Auto"
                         Height="30"
                         IconWidth="16"
                         IconHeight="18"
                         Padding="7"
                         DockPanel.Dock="Top"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         HoverBrush="White"
                         PressedBrush="White"
                         Style="{DynamicResource AnimateBgStyle}" />
            <sgz:SgzIcon Command="{Binding SaveConfigCommand}"
                         Icon="MdiContentSave"
                         Content="SAVE CONFIG"
                         Width="Auto"
                         Height="30"
                         IconWidth="15"
                         IconHeight="14"
                         Padding="8,7,7,7"
                         DockPanel.Dock="Top"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         HoverBrush="White"
                         PressedBrush="White"
                         Style="{DynamicResource AnimateBgStyle}" />
        </local:SgzSlidingDockPanel>
        <local:EditableTreeView Grid.Column="1"
                                ItemsSource="{Binding Folders}"
                                Background="Transparent"
                                BorderBrush="{DynamicResource MaxRolloutBorder}"
                                BorderThickness="1,0"
                                Foreground="{DynamicResource MaxText}"
                                Padding="0,5"
                                SelectedItem="{Binding TVSelectedItem, Mode=TwoWay}"
                                HorizontalContentAlignment="Stretch"/>
        <GridSplitter HorizontalAlignment="Stretch"
                      Background="{DynamicResource MaxRolloutBorder}"
                      Grid.Column="2"
                      Template="{DynamicResource GridSplitterTemplate}" />
        <Border BorderBrush="{DynamicResource MaxRolloutBorder}"
                BorderThickness="0,1,0,0"
                Grid.ColumnSpan="4"
                Grid.Row="1">
            <Grid>
                <DockPanel Visibility="{Binding PathFieldVisibility}">
                    <sgz:SgzIcon Command="{Binding ValidatePathCommand}"
                                 DockPanel.Dock="Right"
                                 Height="Auto"
                                 Width="35"
                                 Padding="11,5"
                                 HoverBrush="{DynamicResource MaxBlue}">
                        <sgz:SgzIcon.Style>
                            <Style TargetType="{x:Type sgz:SgzIcon}">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Icon" Value="MdiClose" />
                                        <Setter Property="Foreground" Value="{DynamicResource MaxRed}" />
                                    </Trigger>
                                    
                                    <Trigger Property="IsEnabled" Value="true">
                                        <Setter Property="Icon" Value="MdiCheck" />
                                        <Setter Property="Foreground" Value="{DynamicResource MaxBlue}" />
                                    </Trigger>
                                    
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsEnabled" Value="true" />
                                            <Condition Property="IsMouseOver" Value="true" />
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background" Value="{DynamicResource MaxButtonMouseOver}" />
                                    </MultiTrigger>
                                    
                                    
                                </Style.Triggers>
                            </Style>
                        </sgz:SgzIcon.Style>
                    </sgz:SgzIcon>
                    <TextBox Text="{Binding PathField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center" 
                             Margin="5,0,0,1"/>
                </DockPanel>
                
                <DockPanel Margin="5,0">
                    <TextBlock Text="{Binding Status, Mode=OneWay}"
                               Foreground="{DynamicResource MaxText}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" 
                               Width="175"/>
                    <sgz:SgzProgressBar x:Name="progressBar"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="4"
                                        Value="{Binding Progress}"
                                        Height="10"
                                        Visibility="{Binding ProgressBarVisibility}" />
                </DockPanel>
                
            </Grid>
        </Border>
    </Grid>

</Window>
    
    
    
