<Window x:Class="CodeDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:local="clr-namespace:CodeDoc.Controls"
        xmlns:sgz="clr-namespace:SugzTools.Controls;assembly=SugzTools"
        xmlns:c="clr-namespace:SugzTools.Converters;assembly=SugzTools"
        mc:Ignorable="d ignore"
        Title="SugzTools Code Documentation"
        Height="380"
        Width="750"
        Background="{StaticResource MaxBackground}"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Icon="Resources/CodeDoc.ico"
        Cursor="{Binding Cursor}">

    <Window.Resources>
        <c:InvertVisibilityConverter x:Key="InvertVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Border BorderBrush="{DynamicResource MaxRolloutBorder}"
                BorderThickness="0,0,1,0">
            <local:SgzSlidingDockPanel Width="30"
                                       OpenSize="118"
                                       AnimationDuration="250">
                <local:SgzSlidingDockPanel.Resources>
                    <Style x:Key="AnimateBgStyle"
                           TargetType="{x:Type sgz:SgzIcon}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        Value="{StaticResource MaxBackground}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </local:SgzSlidingDockPanel.Resources>
                <sgz:SgzIcon Command="{Binding AddFolderCommand}"
                             Icon="MdiFolderPlus"
                             Content="ADD FOLDER"
                             Width="Auto"
                             Height="30"
                             IconWidth="16"
                             IconHeight="18"
                             Padding="7"
                             DockPanel.Dock="Top"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             HoverBrush="White"
                             PressedBrush="White"
                             Style="{DynamicResource AnimateBgStyle}" />
                <sgz:SgzIcon Command="{Binding LoadConfigCommand}"
                             Icon="MdiFolderUpload"
                             Content="LOAD CONFIG"
                             Width="Auto"
                             Height="30"
                             IconWidth="16"
                             IconHeight="18"
                             Padding="7"
                             DockPanel.Dock="Top"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             HoverBrush="White"
                             PressedBrush="White"
                             Style="{DynamicResource AnimateBgStyle}" />
                <sgz:SgzIcon Command="{Binding SaveConfigCommand}"
                             Icon="MdiContentSave"
                             Content="SAVE CONFIG"
                             Width="Auto"
                             Height="30"
                             IconWidth="15"
                             IconHeight="14"
                             Padding="8,7,7,7"
                             DockPanel.Dock="Top"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             HoverBrush="White"
                             PressedBrush="White"
                             Style="{DynamicResource AnimateBgStyle}" />
            </local:SgzSlidingDockPanel>
        </Border>
        <local:EditableTreeView Grid.Column="1"
                                ItemsSource="{Binding Folders}"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource MaxText}"
                                Padding="0,5" />
        <GridSplitter HorizontalAlignment="Stretch"
                      Background="{DynamicResource MaxRolloutBorder}"
                      Grid.Column="2"
                      Template="{DynamicResource GridSplitterTemplate}" />
        <DockPanel Margin="5,0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Grid.ColumnSpan="4"
                   Grid.Row="1">
            <TextBlock Text="{Binding Status, Mode=OneWay}"
                       Foreground="{DynamicResource MaxText}"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Width="175" />
            <ProgressBar x:Name="progressBar"
                         Grid.Row="1"
                         Grid.ColumnSpan="4"
                         Value="{Binding Progress}"
                         Height="10" />
        </DockPanel>
    </Grid>

</Window>
    
    
    
