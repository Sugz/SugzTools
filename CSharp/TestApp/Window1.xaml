<Window x:Class="TestApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        xmlns:sgz="clr-namespace:SugzTools.Controls;assembly=SugzTools"
        mc:Ignorable="d"
        Title="Window1"
        Height="300"
        Width="300"
        Background="#FF444444">
    
    <Grid>
        <sgz:SgzExpandersControl Margin="3">
            <sgz:SgzExpander x:Name="expander"
                             Header="Expander DG"
                             IsExpanded="True">
                <StackPanel Margin="5">
                    <Button Content="Button 01"/>
                    <Button Content="Button 01" />
                    <sgz:SgzUniformGrid Columns="3">
                        <sgz:SgzCheckBox Content="Move"
                                         Spacing="10" />
                        <sgz:SgzCheckBox HorizontalContentAlignment="Right"
                                         Content="Rotate"
                                         Spacing="10" />
                        <sgz:SgzCheckBox HorizontalContentAlignment="Right"
                                         Content="Scale" />
                    </sgz:SgzUniformGrid>
                </StackPanel>
            </sgz:SgzExpander>
        </sgz:SgzExpandersControl>
    </Grid>
</Window>
