        <dg:ExpanderListBox x:Name="listBox"
                            ItemsSource="{Binding}"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            Background="#FF991616"
                            AllowDrop="True"
                            BorderThickness="0"
                            BorderBrush="{x:Null}">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="PART_Border"
                            Background="#FF555555"
                            CornerRadius="3"
                            Grid.Row="1">
                        <StackPanel>
                            <DockPanel>
                                <sgz:SgzIcon x:Name="PART_Drag"
                                             Data="M0,0 H1 V1 H0 M2,0 H3 V1 H2 M4,0 H5 V1 H4 M0,2 H1 V3 H0 M2,2 H3 V3 H2 M4,2 H5 V3 H4 M0,4 H1 V5 H0 M2,4 H3 V5 H2 M4,4 H5 V5 H4 Z"
